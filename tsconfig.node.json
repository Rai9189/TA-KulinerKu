{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": false,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node"]
  },
  "include": [
    "src/index.ts",
    "src/routes/**/*.ts",
    "src/middleware/**/*.ts",
    "src/lib/supabaseServer.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": ["node_modules", "src/main.tsx", "src/App.tsx", "src/pages/**", "src/components/**"]
}