{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.js"
    },
    {
      "src": "/api/restaurants",
      "dest": "/api/restaurants.js"
    },
    {
      "src": "/api/menus",
      "dest": "/api/menus.js"
    },
    {
      "src": "/api/reviews",
      "dest": "/api/reviews.js"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/build/assets/$1"
    },
    {
      "src": "/.*\\.(js|css|png|jpg|jpeg|gif|svg|ico|webmanifest|mjs)",
      "dest": "/build/$0"
    },
    {
      "src": "/(.*)",
      "dest": "/build/index.html"
    }
  ]
}